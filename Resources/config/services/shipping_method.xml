<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="shipping_method.manager" class="WellCommerce\Bundle\ShippingBundle\Manager\ShippingMethodManager" parent="core.manager">
            <argument type="service" id="shipping_method.repository"/>
            <argument type="service" id="shipping_method.factory"/>
        </service>

        <service id="shipping_method.controller.admin" class="WellCommerce\Bundle\ShippingBundle\Controller\Admin\ShippingMethodController">
            <argument type="service" id="shipping_method.manager"/>
            <argument type="service" id="shipping_method.form_builder.admin"/>
            <argument type="service" id="shipping_method.datagrid"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="shipping_method.dataset.query_builder.admin" class="WellCommerce\Bundle\ShippingBundle\DataSet\Admin\ShippingMethodDataSetQueryBuilder" public="false">
            <argument type="service" id="shipping_method.repository"/>
        </service>

        <service id="shipping_method.dataset.admin" class="WellCommerce\Bundle\ShippingBundle\DataSet\Admin\ShippingMethodDataSet" parent="core.dataset">
            <argument type="service" id="shipping_method.dataset.query_builder.admin"/>
        </service>

        <service id="shipping_method.dataset.query_builder" parent="shipping_method.dataset.query_builder.admin" public="false">
            <argument type="service" id="shipping_method.repository"/>
        </service>

        <service id="shipping_method.datagrid" class="WellCommerce\Bundle\ShippingBundle\DataGrid\ShippingMethodDataGrid" parent="core.datagrid">
            <argument key="identifier">shipping_method</argument>
            <argument type="service" id="shipping_method.dataset.admin"/>
        </service>

        <service id="shipping_method.form_builder.admin" class="WellCommerce\Bundle\ShippingBundle\Form\Admin\ShippingMethodFormBuilder" parent="core.form_builder" />

        <service id="shipping_method.calculator.collection" class="Doctrine\Common\Collections\ArrayCollection" />

        <service id="shipping_method.provider" class="WellCommerce\Bundle\ShippingBundle\Provider\ShippingMethodProvider">
            <argument type="service" id="shipping_method.repository"/>
            <argument type="service" id="shipping_method.calculator.collection"/>
        </service>

        <service id="shipping_method_cost.doctrine.event_subscriber" class="WellCommerce\Bundle\ShippingBundle\EventListener\ShippingMethodCostEventSubscriber">
            <tag name="doctrine.event_subscriber" connection="default" />
        </service>

        <service id="form.shipping_cost_collection.data_transformer" class="WellCommerce\Bundle\ShippingBundle\Form\DataTransformer\ShippingCostCollectionToArrayTransformer" shared="false">
            <argument type="service" id="doctrine.helper"/>
            <tag name="form.data_transformer" alias="shipping_cost_collection"/>
        </service>

        <service id="weight_table.calculator" class="WellCommerce\Bundle\ShippingBundle\Calculator\WeightTableCalculator">
            <tag name="shipping_method.calculator" alias="weight_table"/>
        </service>

        <service id="price_table.calculator" class="WellCommerce\Bundle\ShippingBundle\Calculator\PriceTableCalculator">
            <argument type="service" id="currency.converter"/>
            <tag name="shipping_method.calculator" alias="price_table"/>
        </service>

        <service id="shipping_method.order.visitor" class="WellCommerce\Bundle\ShippingBundle\Visitor\ShippingMethodOrderVisitor">
            <argument type="service" id="order.modifier.provider"/>
            <argument type="service" id="shipping_method.provider"/>
            <tag name="order.visitor" alias="shipping_method"/>
        </service>

        <service id="shipping_cost.order.modifier.configurator" class="WellCommerce\Bundle\OrderBundle\Configurator\OrderModifierConfigurator">
            <argument key="name">shipping_cost</argument>
            <argument key="description">order.label.shipping_cost</argument>
            <argument key="subtraction">false</argument>
            <argument key="hierarchy">0</argument>
        </service>

        <service id="shipping_cost.order.modifier" class="WellCommerce\Bundle\OrderBundle\Entity\OrderModifier">
            <factory service="order_modifier.factory" method="create" />
            <configurator service="shipping_cost.order.modifier.configurator" method="configure" />
            <tag name="order.modifier" alias="shipping_cost"/>
        </service>
    </services>
</container>
